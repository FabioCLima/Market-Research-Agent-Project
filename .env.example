# UdaPlay AI Research Agent - Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API Configuration (for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Database Configuration
CHROMA_DB_PATH=./chromadb
COLLECTION_NAME=udaplay_games

# Games Data Directory
GAMES_DIRECTORY=./starter/games

# Agent Configuration
DEFAULT_SEARCH_RESULTS=5
CONFIDENCE_THRESHOLD=0.7

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/udaplay.log

# Memory System Configuration
MEMORY_FILE=./chromadb/memory.json
MAX_MEMORY_FACTS=1000

# Advanced Features Configuration
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TREND_ANALYSIS=true
ENABLE_RECOMMENDATIONS=true
ENABLE_ADVANCED_MEMORY=true
